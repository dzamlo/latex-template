\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{inc/misc}

\frenchbsetup{ThinColonSpace=true}
\SetupFloatingEnvironment{listing}{listname=Table des listings}
\addbibresource{bib.bib}
\pgfplotsset{compat=1.14}
\KOMAoption{parskip}{half*}
\attachfilesetup{color=black}

\AtBeginDocument{
	\pagestyle{headings}
	\clearscrheadfoot
	\ifoot[\thetitle, \thedate]{\thetitle, \thedate}
	\ofoot[\pagemark/\pageref{LastPage}]{\pagemark/\pageref{LastPage}}
	\ohead[]{\rightmark}
	
	\hypersetup{
		pdftitle={\thetitle},
		pdfauthor={\theauthor}
	}
	
	\date{\thedate}
	\title{\thetitle}
	\subtitle{\thesubtitle}
	\author{\theauthor}
}
